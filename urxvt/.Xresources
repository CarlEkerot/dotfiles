! General settings
URxvt.depth: 32
URxvt.meta8: false
URxvt.pointerBlank: true
URxvt.saveLines: 100000
URxvt.scrollBar: false
URxvt.scrollTtyKeypress: true
URxvt.scrollTtyOutput: false

! Font settings
URxvt.letterspace: -1
URxvt.font: xft:DejavuSansMono:pixelsize=16
URxvt.boldFont: xft:DejavuSansMono:bold:pixelsize=16
URxvt.italicFont: xft:DejavuSansMono:italic:pixelsize=16

! URL support
URxvt.url-launcher: sensible-browser
URxvt.matcher.button: 1

! Extensions are stored in /usr/lib/urxvt/perl
URxvt.perl-ext-common: default,clipboard,matcher,resize-font

! Copy/paste. Requires urxvt-perls and xsel
! Also, disable ISO14755 mode when pressing shift+control
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.iso14755: false

! Font resizing. Requires resize-font
URxvt.resize-font.smaller: C-minus
URxvt.resize-font.bigger: C-plus
URxvt.resize-font.reset: C-0
URxvt.resize-font.show: C-question

